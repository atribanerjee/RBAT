@{
    Layout = null;
    ViewData["Title"] = ViewBag.title;
}

<div class="modal tscModal" id="tscModal" tabindex="-1" style="z-index : 1051">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><b>@ViewBag.title</b></h5>
                <button type="button" class="close" onclick="tscModalClose()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="tscElementID" value="@ViewBag.elementID" />
                <div class="row">
                    <div class="col-sm-12">
                        <label for="projectList">Node: @ViewBag.elementName</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label for="surveyDate">Survey Date: </label>
                        <div class="input-group date" data-provide="datepicker">
                            <input id="surveyDate" name="surveyDate" data-date-format="YYYY/MM/DD" type="text" value="01/01/1900">
                            <div class="input-group-addon">
                                <i class="fas fa-calendar-alt fa-fw" style="line-height: 1em; font-size: 18px; top: 1px;"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div id="tscButtons" class="col-sm-12 text-right">
                    </div>
                </div>
                <div class="col-sm-12 text-center">
                    <div id="tscBadInputAlert" class="alert alert-danger fade show" style="display:none">
                    </div>
                    <div id="tscSavedAlert" class="alert alert-success fade show" style="display:none">
                    </div>
                </div>
                <table id="tscTable" class="display compact" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Survey Date</th>
                            <th>Elevation (m)</th>
                            <th>Area (ha)</th>
                            <th>Volume (1000m3)</th>
                        </tr>
                    </thead>                    
                </table>
                <div class="row">
                    <div id="tscButtonsBottom" class="col-sm-12 text-right">

                    </div>
                </div>
                <div id="tscDetailShowModal"></div>
            </div>
            <div class="modal-footer">
                <button id="tscClose" type="button" class="btn btn-secondary" onclick="tscModalClose()">Close</button>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/js/TimeStorageCapacity/TimeStorageCapacity.js")"></script>
