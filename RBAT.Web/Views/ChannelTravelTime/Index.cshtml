@{
    Layout = null;
    ViewData["Title"] = ViewBag.title;
}

<div class="modal cttModal" id="cttModal" tabindex="-1" style="z-index : 1051">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><b>@ViewBag.title</b></h5>
                <button type="button" class="close" onclick="cttModalClose()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="cttElementID" value="@ViewBag.elementID" />
                <div class="row">
                    <div class="col-sm-6">
                        <label for="projectList">Channel: @ViewBag.elementName</label>
                    </div>
                    <div id="cttButtons" class="col-sm-6 text-right">
                    </div>
                </div>
                <div class="col-sm-12 text-center">
                    <div id="cttBadInputAlert" class="alert alert-danger fade show" style="display:none">
                    </div>
                    <div id="cttSavedAlert" class="alert alert-success fade show" style="display:none">
                    </div>
                </div>
                <table id="cttTable" class="display compact" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Flow (m3/s)</th>
                            <th>Travel Time (hours)</th>
                        </tr>
                    </thead>                    
                </table>
                <div class="row">
                    <div id="cttButtonsBottom" class="col-sm-12 text-right">

                    </div>
                </div>
                <div id="cttDetailShowModal"></div>
            </div>
            <div class="modal-footer">
                <button id="cttClose" type="button" class="btn btn-secondary" onclick="cttModalClose()">Close</button>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/js/ChannelTravelTime/ChannelTravelTime.js")"></script>
