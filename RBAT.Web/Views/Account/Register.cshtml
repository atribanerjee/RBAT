@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="google-site-verification" content="s_dp8Zb49ObqMc-olwck5_YjuvJb0YVD4JRJhql7FXI" />
    <title>SB Admin - Login</title>

    <!-- Bootstrap core CSS-->
    <link rel="stylesheet" href="~/lib/css/bootstrap.css" />

    <!-- Custom fonts for this template-->
    <link href="~/lib/css/all.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin.css" rel="stylesheet">

</head>


<body class="bg-dark">

<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Login</div>
        <div class="card-body">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <div class="form-label-group">
                        <input asp-for="Email" class="form-control" autofocus="autofocus" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        <input asp-for="Password" class="form-control" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        <div class="checkbox">
                            <label asp-for="IsApplicationUser">
                                <input asp-for="IsApplicationUser" />
                                @Html.DisplayNameFor(m => m.IsApplicationUser)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        <div class="checkbox">
                            <label asp-for="IsWebServiceUser">
                                <input asp-for="IsWebServiceUser" />
                                @Html.DisplayNameFor(m => m.IsWebServiceUser)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                </div>
                <div class="text-center">
                    <a asp-action="Login">Login</a>
                    <br />
                    <a asp-action="ForgotPassword">Forgot Password?</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap core JavaScript-->
<script type="text/javascript" src="~/lib/js/jquery.js"></script>
<script type="text/javascript" src="~/lib/js/bootstrap.js"></script>

<!-- Core plugin JavaScript-->
<script src="~/lib/js/jquery.easing.js"></script>

</body>
</html>

@section Scripts {
    @await Html.PartialAsync( "_ValidationScriptsPartial" )
}
